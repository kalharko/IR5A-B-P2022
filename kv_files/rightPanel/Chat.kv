#:kivy 2.1.0

<Chat>:
    chat_input: chat_input
    messageManager: messageManager

    canvas:
        Color:
            rgba: (0.4, 0.4, 0.4,1)

        Rectangle:
            pos: root.pos
            size: root.size

    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size

        MessageManager:
            id: messageManager
            size_hint: [1, 0.9]

        TextInput:
            id:chat_input
            text: ''
            text_size: self.size
            halign: 'left'
            valign: 'top'
            size_hint: [1, 0.1]
            size_hint_min_y: 30
