#:kivy 2.1.0

<Chat>:
    chat_input: chat_input

    canvas:
        Color:
            rgba: (0.4, 0.4, 0.4,1)

        Rectangle:
            pos: root.pos
            size: root.size

    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size

        MessageManager:
            size_hint: [1, 0.9]
            file_path: 'DefaultGame\Chats\general_chat.txt'

        TextInput:
            id:chat_input
            text: 'server ip :'
            text_size: self.size
            halign: 'left'
            valign: 'top'
            size_hint: [1, 0.1]



