#:kivy 2.1.0

<Message>:
    Label:
        pos: root.pos
        size: root.size
        halign: 'left'
        valign: 'top'
        text: root.author + ' : ' + root.content

<MessageManager>:
    gridlayout: gridlayout

    canvas:
        Color:
            rgba: (0.5, 0.5, 0.5,1)

        Rectangle:
            pos: root.pos
            size: root.size

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        pos: root.pos
        size: root.size

        GridLayout:
            id: gridlayout
            cols: 1
            row_default_height: 40
            pos: root.pos
            #size: root.size
            size_hint_y: None

            Button:
                on_press: root.load_from_file()

